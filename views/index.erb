<div class="spacer"></div>

<div class="full">
  <div class="inLine">
    <h1>messages</h1>
    <% @next_group_messages.each do |message| %>
      <div class="messageTitle">
        <p>
          <a href="/profile/show/<%= message.user_id %>"><%= @users.find_by_id(message.user_id).username %></a>
        </p>
        <p><%= message.body %></p>
      </div>
    <% end %>

    <div class="nav_messages">
      <% if !session[:from_num].nil? && session[:from_num] - session[:num_items_on_current_page] > 0 %>
      <form class="left next_prev" action="/prev" method="post">
        <input type="submit" name="" value="<< Prev">
      </form>
      <% end %>

      <% if !session[:reached_last] %>
      <form class="left next_prev" action="/next" method="post">
        <input type="submit" name="" value="Next >>">
      </form>
      <% end %>
    </div>

  </div>
  <div id="add-message-box">
    <form class="messenger" action="/messages" method="post">
      <label>add new message:</label><br>
      <textarea name="body" rows="3" value="" maxlength="150"></textarea><br>
      <input type="submit" name="" value="send" id="sub"><br>
    </form>
  </div>
</div>
